@{
    ViewData["Title"] = "Home Page";
}

<main>
    <!-- hero slider area start -->
    <section class="slider-area">
        <div class="hero-slider-active slick-arrow-style slick-arrow-style_hero slick-dot-style">
            <!-- single slider item start -->
            <div class="hero-single-slide hero-overlay">
                <div class="hero-slider-item bg-img" data-bg="assets/img/slider/banner1.jpeg"></div>
            </div>
            <!-- single slider item start -->
            <!-- single slider item start -->
            <div class="hero-single-slide hero-overlay">
                <div class="hero-slider-item bg-img" data-bg="assets/img/slider/banner2.png"></div>
            </div>
            <!-- single slider item start -->
        </div>
    </section>
    <!-- hero slider area end -->
    <!-- service policy area start -->
    <div class="service-policy section-padding">
        <div class="container">
            <div class="row mtn-30">
                <div class="col-md-4">
                    <div class="policy-item">
                        <div class="policy-icon">
                            <i class="pe-7s-plane"></i>
                        </div>
                        <div class="policy-content">
                            <h4 class="policy-title">Free Shipping</h4>
                            <p>Free shipping all order</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="policy-item">
                        <div class="policy-icon">
                            <i class="pe-7s-headphones"></i>
                        </div>
                        <div class="policy-content">
                            <h4 class="policy-title">Customer Support</h4>
                            <p>Support 24 hours a day</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="policy-item">
                        <div class="policy-icon">
                            <i class="pe-7s-shield"></i>
                        </div>
                        <div class="policy-content">
                            <h4 class="policy-title">Secure Payment</h4>
                            <p>We ensure secure payment</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- service policy area end -->
    <!-- banner statistics area start -->
    <div class="banner-statistics-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <figure class="banner-statistics">
                        <a href="#">
                            <img src="assets/img/banner/banner3.png" alt="product banner">
                        </a>
                    </figure>
                </div>
            </div>
        </div>
    </div>
    <!-- banner statistics area end -->
    <!-- testimonial area start -->
    <div class="brand-logo section-padding pt-0">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="brand-logo-carousel slick-row-10 slick-arrow-style">
                        <!-- single brand start -->
                        <div class="brand-item">
                            <a href="#">
                                <img src="assets/img/brand/apple.png" height="50" alt="">
                            </a>
                        </div>
                        <!-- single brand end -->
                        <!-- single brand start -->
                        <div class="brand-item">
                            <a href="#">
                                <img src="assets/img/brand/dell.jpg" height="50" alt="">
                            </a>
                        </div>
                        <!-- single brand end -->
                        <!-- single brand start -->
                        <div class="brand-item">
                            <a href="#">
                                <img src="assets/img/brand/asus.jpg" height="50" alt="">
                            </a>
                        </div>
                        <!-- single brand end -->
                        <!-- single brand start -->
                        <div class="brand-item">
                            <a href="#">
                                <img src="assets/img/brand/logi.jpg" height="50" alt="">
                            </a>
                        </div>
                        <!-- single brand end -->
                        <!-- single brand start -->
                        <div class="brand-item">
                            <a href="#">
                                <img src="assets/img/brand/corsair.png" height="50" alt="">
                            </a>
                        </div>
                        <!-- single brand end -->
                        <!-- single brand start -->
                        <div class="brand-item">
                            <a href="#">
                                <img src="assets/img/brand/edra.jpg" height="50" alt="">
                            </a>
                        </div>
                        <!-- single brand end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- brand logo area end -->
</main>

